
@model HomeDetailsViewModel;
@{
    ViewBag.Title = "学生详情";
    var photoPath = "~/Images/avatars/" + (Model.Student.PhotoPath ?? "weixin.jpg");
}
<h3>@ViewBag.PageTitle</h3>

<div class="row" justify-content-center m-3>
    <div class="col-sm-6">
        <div class="card" >
            <div class="card-header">
                <h1>@Model.Student.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src=@photoPath asp-append-version="true">
                <h4>学生ID：@Model.Student.Id</h4>
                <h4>邮箱：@Model.Student.Email</h4>
                <h4>科目：@Model.Student.MaJor.GetDisplayName()</h4>
            </div>

            <div class="card-footer text-center">
                <a  class="btn btn-primary" asp-controller="home" asp-action="Index">返回</a>
                <a href="#" class="btn btn-primary">编辑</a>
                <a href="#" class="btn btn-primary">删除</a>
            </div>

        </div>
    </div>
</div>

@section Scripts{
    <script src="~/javascript/CustomScript.js"></script>
}
